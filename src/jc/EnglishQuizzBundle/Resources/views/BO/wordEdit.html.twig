{#
    Allows to edit word.
    Required :
    - wordToEdit : FormView element based on EnglishWordType object (i.e. EnglishWord to edit).
#}

{% extends "::admin.html.twig" %}

{% block body %}

    {% if (wordToEdit.vars.value.id) %}
    <h1>Modification du mot</h1>
    {% else %}
    <h1>Ajout d'un mot</h1>
    {% endif %}

    <form action="{{ path('jc_english_quizz_bo_word_edit', { 'id': wordToEdit.vars.value.id }) }}" method="post" {{ form_enctype(wordToEdit) }}>

        <div class="field-set">

            {{ form_label(wordToEdit.nameEN, "Mot (anglais)") }}
            {{ form_widget(wordToEdit.nameEN, { 'attr': {'class': 'field-M'}, 'max_length' : '55' }) }}
            {{ form_errors(wordToEdit.nameEN) }}

            <div class="sep-10"></div>

            {{ form_label(wordToEdit.nameFR, "Traduction") }}
            <span class="comment">Si plusieurs traductions, séparez les valeurs avec le caractère '/'</span>
            {{ form_widget(wordToEdit.nameFR, { 'attr': {'class': 'field-XL'} }) }}
            {{ form_errors(wordToEdit.nameFR) }}

            <div class="field-set-separator"></div>

            <div class="left w-100">
                {{ form_label(wordToEdit.lesson, "Leçon") }}
                {{ form_widget(wordToEdit.lesson, { 'attr': {'class': 'field-XS'}, 'max_length' : '2' }) }}
                {{ form_errors(wordToEdit.lesson) }}
            </div>

            <div class="left w-100">
                {{ form_label(wordToEdit.page, "Page") }}
                {{ form_widget(wordToEdit.page, { 'attr': {'class': 'field-XS'}, 'max_length' : '2' }) }}
                {{ form_errors(wordToEdit.page) }}
            </div>

            <div class="clear"></div>

            <div class="sep-10"></div>
            <span class="comment">NOTE : Si pas de leçon et/ou de page => laisse la valeur à 0</span>

            {{ form_rest(wordToEdit) }}

        </div>

        <div class="sep-20"></div>

        <input type="submit" value="Enregistrer" class="button" />

    </form>

{% endblock %}
