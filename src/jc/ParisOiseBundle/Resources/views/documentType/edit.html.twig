{#
    Allows to edit documentType.
    Required :
    - documentTypeToEdit : FormView element based on DocumentTypeType object (i.e. documentType to edit).
#}

{% extends "::master.html.twig" %}

{% block body %}

    {% if (documentTypeToEdit.vars.value.id) %}
    <h1>Modification du document</h1>
    {% else %}
    <h1>Ajout d'un document</h1>
    {% endif %}

    <form action="{{ path('jc_document_type_edit', { 'id': documentTypeToEdit.vars.value.id }) }}" method="post" {{ form_enctype(documentTypeToEdit) }}>

        <div class="field-set">

            {{ form_label(documentTypeToEdit.label, "Nom du document") }}
            {{ form_widget(documentTypeToEdit.label, { 'attr': {'class': 'field-M'}, 'max_length' : '255' }) }}
            {{ form_errors(documentTypeToEdit.label) }}

            <div class="sep-10"></div>

            {{ form_widget(documentTypeToEdit.required) }}
            {{ form_label(documentTypeToEdit.required, "Est obligatoire") }}
            {{ form_errors(documentTypeToEdit.required) }}

        </div>

        {{ form_rest(documentTypeToEdit) }}

        <div class="sep-20"></div>

        <input type="submit" value="Enregistrer" class="button" />

    </form>

{% endblock %}
