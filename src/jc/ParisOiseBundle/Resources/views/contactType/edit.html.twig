{#
    Allows to edit contactType.
    Required :
    - contactTypeToEdit : FormView element based on ContactTypeType object (i.e. contactType to edit).
#}

{% extends "::master.html.twig" %}

{% block body %}

    {% if (contactTypeToEdit.vars.value.id) %}
    <h1>Modification du contact</h1>
    {% else %}
    <h1>Ajout d'un contact</h1>
    {% endif %}

    <form action="{{ path('jc_contact_type_edit', { 'id': contactTypeToEdit.vars.value.id }) }}" method="post" {{ form_enctype(contactTypeToEdit) }}>

        <div class="field-set">

            {{ form_label(contactTypeToEdit.label, "Type de contact") }}
            {{ form_widget(contactTypeToEdit.label, { 'attr': {'class': 'field-M'}, 'max_length' : '255' }) }}
            {{ form_errors(contactTypeToEdit.label) }}

        </div>

        {{ form_rest(contactTypeToEdit) }}

        <div class="sep-20"></div>

        <input type="submit" value="Enregistrer" class="button" />

    </form>

{% endblock %}
