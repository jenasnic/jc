{#
    Display all existing slideshow for front-office.
    Required :
    - slideshowList : list of all available slideshow to display (as Slideshow)
#}

{% extends "::master.html.twig" %}

{% block header %}
    <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/lib/slick.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/slideshow.css') }}" />
    <script type="text/javascript" src="{{ asset('resources/scripts/lib/jquery.bpopup.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('resources/scripts/lib/slick.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('resources/scripts/slideshow.js') }}"></script>
{% endblock %}

{% block body %}

    {% if slideshowList is defined %}
        <ul id="slideshow-list">
        {% for slideshow in slideshowList %}
            <li data-id="{{ slideshow.id }}">{{ slideshow.name }}</li>
        {% endfor %}
        </ul>
        <div id="slideshow-content"></div>
    {% else %}
        <p>Aucun diaporama Ã  afficher</p>
    {% endif %}

    <div id="slideshow-popup"></div>

{% endblock %}
