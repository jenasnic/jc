{#
    Display a specific slideshow with all its pictures.
    Required :
    - slideshow : slideshow to display (as Slideshow)
#}

<h2>{{ slideshow.name }}</h2>

<img src="{{ slideshow.pictureUrl }}" alt="{{ slideshow.name }}" />
{% if (slideshow.description|length > 0) %}
    <p>{{ slideshow.description|raw }}</p>
{% endif %}

<ul>
{% for picture in slideshow.pictures %}
    <li>
        <h3>{{ picture.name }}</h3>
        <img src="{{ picture.pictureUrl }}" alt="{{ picture.name }}" />
        {% if (picture.description|length > 0) %}
            <p>{{ picture.description|raw }}</p>
        {% endif %}
    </li>
{% endfor %}
</ul>
