{#
    Allows to edit menu.
    Required :
    - menuToEdit : FormView element based on MenuType object (i.e. menu to edit).
#}

{% extends "::admin.html.twig" %}

{% block body %}

    {% form_theme menuToEdit ':forms:custom_errors.html.twig' %}

    {% if (menuToEdit.vars.value.id) %}
    <h1>Modification du menu</h1>
    {% else %}
    <h1>Ajout d'un menu</h1>
    {% endif %}

    <form action="{{ path('jc_menu_bo_edit', { 'id': menuToEdit.vars.value.id }) }}" method="post" {{ form_enctype(menuToEdit) }}>

        <div class="field-set">

            {{ form_label(menuToEdit.name, "Libell√© du menu") }}
            {{ form_widget(menuToEdit.name, { 'attr': {'class': 'field-M'}, 'max_length' : '255' }) }}
            {{ form_errors(menuToEdit.name) }}

            <div class="field-set-separator"></div>

            {{ form_label(menuToEdit.url, "URL") }}
            {{ form_widget(menuToEdit.url, { 'attr': {'class': 'field-L'} }) }}
            {{ form_errors(menuToEdit.url) }}

            {{ form_rest(menuToEdit) }}

        </div>

        <div class="sep-20"></div>

        <input type="submit" value="Enregistrer" class="button" />

    </form>

    <div class="sep-20"></div>

{% endblock %}
