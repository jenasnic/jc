{#
    Display all news for front-office
    Required :
    - newsList : array of news (as News)
#}

{% extends "::master.html.twig" %}

{% block body %}

<h1>Actualit√©s</h1>

{% for news in newsList %}
<a href="{{ path('jc_news_fo_index', { 'id': news.id }) }}">
    <div>
        <h2>{{ news.title }}</h2>
        <span>{{ news.date|date('d/m/Y') }}</span>
        {% if (news.pictureUrl is not empty) %}
            <img src="{{ news.pictureUrl }}" alt="-" />
        {% endif %}
        {{ truncate(news.content, 250) }}...
    </div>
</a>
<div class="sep-10"></div>
{% endfor %}

{% endblock %}
